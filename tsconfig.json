{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules"],
  "extends": "@tsconfig/node16/tsconfig.json",
  "ts-node": {
    "esm": true
  }
}
